<<fig.width=8, fig.height=4>>=
# Download and decompress file
if (!file.exists("lassa/metadata.tsv")) {
  url <- "https://data.nextstrain.org/files/workflows/lassa/metadata.tsv.zst"
  system("mkdir lassa")
  system(paste("curl -L", url, "-o lassa/metadata.tsv.zst"))
  system("zstd -d lassa/metadata.tsv.zst -o lassa/metadata.tsv")
}

data <- readr::read_delim("lassa/metadata.tsv", delim="\t")

cdata <- data %>%
  subset(., !is.na(date)) %>%
  subset(., date !="XXXX-XX-XX") %>%
  mutate(
    date_adjusted = lubridate::date(gsub("-XX", "-01", date)),
    col_year = substr(date, 1, 4),
    col_mon = substr(date, 6,7),
    col_day = substr(date, 9,10)
  )

summarize_group <- function(data, serotype="DENV1", MinYear=2000) {
  data %>%
  subset(., col_year > MinYear) %>%
  select(., c("accession", "country", "col_year", "date_adjusted")) %>%
  group_by(, ColDate) %>%
  summarise(
    n=n()
  ) %>%
  ungroup(.)
}
              
cdata %>% 
  ggplot(., aes(x=col_year, fill=country)) + 
  geom_bar() +
  theme_bw() +
  theme(
    axis.text.x = element_text(angle=90, vjust=1, hjust=1),
    legend.position = "bottom",
    legend.title = element_blank()
  ) +
  labs(
    title=paste("Lassa entries with collection date (n = ",nrow(cdata),")", sep=""),
    x="Year", y="Count"
  )
@

<<fig.width=8, fig.height=4>>=
