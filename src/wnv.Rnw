\section*{Exploratory Graphics}

<<fig.width=8, fig.height=4>>=
# Download and decompress file
if (!file.exists("wnv/metadata.tsv")) {
  system("mkdir -p wnv")
  file_name <- "metadata.tsv"
  zst_file <- paste0(file_name, ".zst")
  url <- paste0("https://data.nextstrain.org/files/workflows/wnv/metadata.tsv.zst")
  system(paste0("curl -L ", url, " -o ", "wnv/", zst_file))
  system(paste0("zstd -d wnv/", zst_file, " -o wnv/", file_name))
}

data <- readr::read_delim("wnv/metadata.tsv", delim="\t")
@


<<fig.width=8, fig.height=4>>=
cdata <- data %>%
  subset(., !is.na(date)) %>%
  subset(., date !="XXXX-XX-XX") %>%
  mutate(
    date_adjusted = lubridate::date(gsub("-XX", "-01", date)),
    col_year = substr(date, 1, 4),
    col_mon = substr(date, 6,7),
    col_day = substr(date, 9,10)
  )
              
cdata %>% 
  ggplot(., aes(x=col_year, fill=region)) + 
  geom_bar() +
  theme_bw() +
  theme(
    axis.text.x = element_text(angle=90, vjust=1, hjust=1),
    legend.position = "bottom",
    legend.title = element_blank()
  ) +
  labs(
    title=paste("WNV entries with collection date (n = ",nrow(cdata),")", sep=""),
    x="Year", y="Count"
  )

cdata %>% 
  ggplot(., aes(x=col_year, fill=clade_membership)) + 
  geom_bar() +
  theme_bw() +
  theme(
    axis.text.x = element_text(angle=90, vjust=0.5, hjust=1),
    legend.position = "bottom",
    legend.title = element_blank()
  ) +
  labs(
    title=paste("WNV entries with collection date (n = ",nrow(cdata),")", sep=""),
    x="Year", y="Count"
  )
@

<<fig.width=8, fig.height=4>>=
max_length <- max(data$length)
binwidth <- 200

data %>%
  ggplot(aes(x = length)) +
  geom_histogram(binwidth = binwidth, fill = "skyblue", color = "black") +
  theme_bw() +
  labs(
    x = paste("Sequence lengths (binwidth=", binwidth,")", sep=""),
