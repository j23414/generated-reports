  )
@

\section*{Global subsampling}

<<fig.width=8, fig.height=4>>=
filtered <- data %>% 
  subset(., length>9800)

cdata %>%
  mutate(filter=length>9800) %>%
  ggplot(., aes(x=col_year, fill=filter)) + 
  geom_bar() +
  theme_bw() +
  theme(
    axis.text.x = element_text(angle=90, vjust=0.5, hjust=1),
    legend.position = "bottom",
    legend.title = element_blank()
  ) +
  labs(
    title=paste("WNV entries with collection date (n = ",nrow(cdata),")", sep=""),
    x="Year", y="Count"
  ) +
  scale_fill_manual(values = c("TRUE" = "#619CFF", "FALSE" = "#F8766D"),
                    labels = c("TRUE" = "Above length filter", "FALSE" = "Below length filter"))
@

<<fig.width=8, fig.height=8>>=
data %>%
  subset(., !is.na(country)) %>%
  mutate(is_high = country %in% c("USA", "Italy")) %>%
  #subset(., country != "USA") %>%
  mutate(filter=length>9800) %>%
  ggplot(., aes(x=country, fill=filter)) + 
  geom_bar() +
  theme_bw() +
  theme(
    axis.text.x = element_text(angle=90, vjust=0.5, hjust=1),
    legend.position = "bottom",
    legend.title = element_blank()
  ) +
  labs(
    title=paste("WNV entries that were above or below filter, by country (n = ",nrow(subset(data, length>9800)),")", sep=""),
    x="Year", y="Count"
  ) +
  scale_fill_manual(values = c("TRUE" = "#619CFF", "FALSE" = "#F8766D"),
                    labels = c("TRUE" = "Above length filter", "FALSE" = "Below length filter"))+
  facet_grid(is_high~., scales = "free",
             labeller = as_labeller(c("TRUE" = "Highs", "FALSE" = "Lows"))) #+
  #scale_grid_manual(labels = c("TRUE" = "Highs", "FALSE" = "Lows"))
@


